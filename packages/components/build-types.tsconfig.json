{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outFile": "./dist/all.d.ts",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "component.createDOMElement",
        "jsxFragmentFactory": "component.createDOMFragment"
    },
    "include": [
      "src/**/*.tsx"
    ],
    "exclude": [
      "./src/**/*.stories.tsx"
    ]
}