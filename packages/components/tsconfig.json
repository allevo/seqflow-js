{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022", "dom", "DOM.Iterable"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "jsx": "react",
        "jsxFactory": "component.createDOMElement",
        "jsxFragmentFactory": "component.createDOMFragment",
        "forceConsistentCasingInFileNames": true,
        "module": "es2022",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "declaration":true,
        "types": [],
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./src/**/*.stories.tsx", "./tests/**/*"]
}
